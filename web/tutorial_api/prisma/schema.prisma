generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Attraction {
  id            Int         @id @default(autoincrement())
  name          String  
  description   String?
  works         Work[]      // 1:N
}

model Work {
  id            Int         @id  @default(autoincrement())
  title         String
  author        String?
  description   String?
  attraction_id Int
  attraction    Attraction @relation(fields: [attraction_id], references: [id])
} 